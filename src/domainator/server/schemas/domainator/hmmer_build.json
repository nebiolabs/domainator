{
  "id": "hmmer_build",
  "display_name": "Hmmer Build",
  "category": "Other",
  "description": "Build an HMM profile from a multiple sequence alignment (MSA) \n\n Allows the user to specify the ACC, NAME, and DESC fields of the HMM profile.\n\nSome of these options are not available in the standard hmmbuild tool from HMMER.",
  "runner": "module",
  "entry_point": "domainator.hmmer_build",
  "parameters": [
    {
      "name": "Input",
      "parameter": "input",
      "help": "Path of input msa. If not supplied, reads from stdin. Acceptable formats are the same as for hmmbuild.",
      "type": "file",
      "flags": [
        "-i",
        "--input"
      ]
    },
    {
      "name": "Output",
      "parameter": "output",
      "help": "hmm output file path.",
      "type": "output",
      "required": true,
      "flags": [
        "-o",
        "--output"
      ]
    },
    {
      "name": "Name",
      "parameter": "name",
      "help": "Name of the HMM profile.",
      "type": "string",
      "flags": [
        "--name"
      ]
    },
    {
      "name": "Acc",
      "parameter": "acc",
      "help": "Accession of the HMM profile.",
      "type": "string",
      "flags": [
        "--acc"
      ]
    },
    {
      "name": "Desc",
      "parameter": "desc",
      "help": "Description of the HMM profile.",
      "type": "string",
      "flags": [
        "--desc"
      ]
    },
    {
      "name": "Alphabet",
      "parameter": "alphabet",
      "help": "Alphabet of the input MSA. If not supplied, inferred from the input.",
      "type": "string",
      "choices": [
        "dna",
        "rna",
        "amino"
      ],
      "flags": [
        "--alphabet"
      ]
    }
  ],
  "advanced_parameters": []
}
